<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.screenController.RegisterScreenController">
   <children>
      <TextField fx:id="loginField" layoutX="107.0" layoutY="49.0" promptText="Логин*">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <Button fx:id="registerButton" layoutX="97.0" layoutY="449.0" mnemonicParsing="false" onAction="#registerButtonAction" text="Регистрация">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <PasswordField fx:id="passwordField" layoutX="107.0" layoutY="86.0" promptText="Пароль*">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <Button fx:id="cancelButton" layoutX="232.0" layoutY="449.0" mnemonicParsing="false" onAction="#cancelButtonAction" text="Отмена">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <PasswordField fx:id="repeatPasswordField" layoutX="107.0" layoutY="124.0" promptText="Повторите пароль*">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <TextField fx:id="surnameField" layoutX="107.0" layoutY="180.0" promptText="Фамилия">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="nameField" layoutX="107.0" layoutY="216.0" promptText="Имя">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="patronymicField" layoutX="107.0" layoutY="252.0" promptText="Отчетсво">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="workplaceField" layoutX="107.0" layoutY="287.0" promptText="Место работы">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="cityField" layoutX="107.0" layoutY="324.0" promptText="Город">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="phonefField" layoutX="107.0" layoutY="359.0" promptText="Телефон">
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <CheckBox fx:id="adminCheckBox" layoutX="107.0" layoutY="407.0" mnemonicParsing="false" onAction="#adminChecked" text="Администратор" />
      <PasswordField fx:id="adminCodeField" layoutX="107.0" layoutY="435.0" promptText="Код*" visible="false">
         <font>
            <Font size="15.0" />
         </font>
      </PasswordField>
      <Pane fx:id="errorPane" prefHeight="38.0" prefWidth="400.0" style="-fx-background-color: rgb(236,78,74);" visible="false">
         <children>
            <Text fill="#eeeeee" layoutX="10.0" layoutY="22.0" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font size="14.0" />
               </font>
            </Text>
         </children>
      </Pane>
   </children>
</AnchorPane>
